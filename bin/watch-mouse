#!/bin/zsh

if [[ $1 = 8 ]]; then
    btn="Hyper_L"
elif [[ $1 = 9 ]]; then
    btn="Super_L"
else
    echo "Not implemented for this button"
    exit 1
fi

cmd="xinput --query-state 'Kingsis Peripherals ZOWIE Gaming mouse' | grep '\[$1\]' | cut -c 12-"
state=$(eval $cmd)

while [[ $state = "down" ]]; do
  echo $state $btn
  state=$(eval $cmd)
  sleep 0.01
done

echo $state $btn

xte 'keyup '$btn''
