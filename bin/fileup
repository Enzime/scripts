#!/bin/bash

file=$(file-chooser)
: ${site:=puu.sh}
regex="^(https?|ftp)://[-A-Za-z0-9\+&@#/%?=~_|!:,.;]*[-A-Za-z0-9\+&@#/%=~_|]$"

if [ -n "$file" ]; then
	if [ -f "$file" ]; then
		url=$($site "$file" -q)

		if [[ "$url" =~ $regex ]]; then
			echo -n $url | xclip -selection clipboard
			echo $url
			firefox "$url"
		else
			echo Failed to upload
		fi
	fi
else
	echo No file chosen
fi
